[Unit]
Description=Streamlit BTC Trend
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/crypto/
ExecStart=/bin/bash -c "source /home/ubuntu/crypto/venv/bin/activate && pip install -r /home/ubuntu/crypto/requirements.txt && streamlit run /home/ubuntu/crypto/BTCapp.py"
Restart=always

[Install]
WantedBy=multi-user.target