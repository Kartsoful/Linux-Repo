server {
    listen 80;
    server_name _;

    # Etusivu location
    root /var/www/html;
    index index.html;

    # Chat-sivun staattiset tiedostot
    location /chat {
        alias /var/www/html/chat;
        index index_chat.html;
        try_files $uri $uri/ /chat/index_chat.html;
    }

    # WebSocket proxy MQTT brokerille
    location /mqtt {
        proxy_pass http://127.0.0.1:9001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
    }

    # API proxy Flask-sovellukselle
    location /api/ {
        proxy_pass http://127.0.0.1:5001/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # Minikube palvelun proxy
    location /kube {
        # ← Kun käyttäjä avaa: http://203.0.113.50/kube
        #    Nginx ohjaa pyynnön Minikubeen:

        proxy_pass http://192.168.49.2:30336/;
        #              ↑            ↑        ↑
        #              Minikube IP  NodePort  Path

        # HTTP-headerit välitetään:
        proxy_set_header Host $host;                    # → Alkuperäinen host
        proxy_set_header X-Real-IP $remote_addr;        # → Käyttäjän IP
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;  # → Proxy ketju
        proxy_set_header X-Forwarded-Proto $scheme;     # → http/https
    }
}
